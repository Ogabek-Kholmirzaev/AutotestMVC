@model UserDto

@{
    ViewData["Title"] = "Sign in Page";
}

<h1 class="text-center">Tizimga kirish</h1>

<div class="d-flex justify-content-center">
    <form asp-controller="Users" asp-action="Signin" class="mb-3 w-50" method="post">
        <div class="form-group">
            <label for="PhoneNumber" class="form-label">Phone Number</label>
            <input class="form-control" type="text" id="PhoneNumber" name="Phone" placeholder="Phone Number" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Password" class="form-label">Password</label>
            <input class="form-control" type="password" id="Password" name="Password" placeholder="Password"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <input class="form-control btn-primary mt-2" type="submit" value="Sign in" />
        
        <a asp-action="SignUp" class="form-control btn-primary text-center mt-2">Sign up</a>
    </form>
</div>

<style>
    a {
        text-decoration: none;
    }
</style>