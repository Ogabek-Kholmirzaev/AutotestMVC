@model User

@{
    ViewData["Title"] = "Edit Profile Page";

    var user = (User)ViewBag.user;
}

<h1 class="text-center">Edit</h1>

<div class="d-flex justify-content-center">
    <form asp-controller="Users" asp-action="Edit" class="mb-3 w-50" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Name" class="form-label">Name</label>
            <input class="form-control" type="text" id="Name" name="Name" placeholder="Name" value="@user.Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="PhoneNumber" class="form-label">Phone Number</label>
            <input class="form-control" type="text" id="PhoneNumber" name="Phone" placeholder="Phone Number" value="@user.Phone" readonly="readonly"/>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Password" class="form-label">Password</label>
            <input class="form-control" type="password" id="Password" name="Password" placeholder="Password" value="@user.Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="ImageFile" class="form-label">Image</label>
            <input class="form-control" type="file" id="Image" name="ImageFile" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <input class="form-control btn-primary" type="submit" value="Edit" />
    </form>
</div>